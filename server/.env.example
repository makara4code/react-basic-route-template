# Server Configuration
PORT=3000
NODE_ENV=development

# Directus Configuration
DIRECTUS_URL=https://directus-production-7511.up.railway.app

# Security
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_COOKIE_NAME=auth_session
ACCESS_TOKEN_COOKIE_NAME=access_token
REFRESH_TOKEN_COOKIE_NAME=refresh_token

# Token Expiration Configuration
# Access token cookie expiration (in milliseconds)
# Default: 300000 (5 minutes) - triggers refresh after 5 minutes
# Production recommendation: 300000 (5 min) to 900000 (15 min)
ACCESS_TOKEN_MAX_AGE=300000

# Refresh token cookie expiration (in milliseconds)
# Default: 900000 (15 minutes) - allows refresh within 15 minutes
# Production recommendation: 900000 (15 min) to 604800000 (7 days)
REFRESH_TOKEN_MAX_AGE=900000

# Legacy: COOKIE_MAX_AGE (deprecated - use ACCESS_TOKEN_MAX_AGE instead)
# Kept for backward compatibility
COOKIE_MAX_AGE=300000

# Logging Configuration
# Log level: debug, info, warn, error (default: info in production, debug in development)
LOG_LEVEL=info

# Enable/disable detailed audit logging (default: true in production, false in development)
# Audit logging captures request/response details for compliance and debugging
# Set to false on edge platforms (Cloudflare Workers) to reduce overhead
LOG_AUDIT_ENABLED=true

# Additional fields to redact from logs (comma-separated, case-insensitive)
# Default fields already redacted: password, token, secret, apiKey, creditCard, ssn, cvv
# Example: LOG_REDACT_FIELDS=customSecret,internalToken,privateKey
LOG_REDACT_FIELDS=

