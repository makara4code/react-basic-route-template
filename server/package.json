{
  "name": "my-react-app-server",
  "version": "1.0.0",
  "description": "Hono backend server for React app with Directus proxy - works on Node.js and Edge",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "type-check": "tsc --noEmit",
    "deploy:cloudflare": "wrangler deploy"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "hono": "^4.6.14",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@hono/node-server": "^1.13.7",
    "@types/node": "^22.10.5",
    "cross-env": "^10.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "wrangler": "^3.99.0"
  }
}
